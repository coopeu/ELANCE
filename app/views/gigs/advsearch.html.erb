
	<!-- Content area -->
	<div class="ui container content" style='height=80%; width:100%; margin:0; padding:0;'>
		<div class="ui stackable doubling grid" style='margin:0; padding:0;'>
			<!-- Middle Content -->
			<div class="twelve wide column">
				<div align="center">
					<div class="ui items">
<%#= render 'layouts/shared/style' %>						
							<!-- Content area <div class="ui container content" style='margin=5;padding=5;'>-->
							<!--ui celled padded table-->
							<table class="ui small striped compact teal table">
							<!-- style='margin:0 0 15 0;padding:0 0 15 0;'>-->
							  <thead class="ui small striped compact teal table">
							    <tr><th class="single line"><h4><%= link_to 'Title', sort: :name %></h4></th>
							    <th class="single line center aligned"><h5><%= link_to 'Location', sort: :location %><BR/>
							    <%= link_to 'Budged', sort: :budget %> - <%= link_to 'Category', sort: :category_id %> - <%= link_to 'Author', sort: :user_id %></h5></th>
							    <th><h4>Description</h4></th>
							  </tr></thead>
							  
							  <tbody><% @gigs.each do |g| %>		  
							    <tr style='height: auto; padding: 0 0 0 0;'>
							      <td>
							        <h5 class="ui left mini aligned header"><%= link_to g.name, gig_path(g), :class => "" %></h5></td>
							      <td class="single line center aligned"><h5><small><%= g.location %><BR/>
							      	<%= g.budget %> - <%= g.category.name %> - <%= g.user.username %></small></h5></td>
							      <td><h5 class="ui aligned mini header" style='text-align: justify;'><small><%= g.description %></small></h5></td>
							    </tr>
							    <% end %>
							  </tbody>
							</table>

						
						<div class="ui container center aligned content"'>
						<h4><%= paginate @gigs %></h4>
						</div><!-- ./container -->


					</div><!-- ./items -->

					<div class="ui teal divider"></div>
				</div><!-- ./center -->	
			</div><!-- ./twelve wide column left-Center Content -->

			<!-- Right Sidebar -->

			<div class="four wide compact column">

				<div class="ui segments moderns" style='border: 2px solid teal; border-radius: 8px; margin-bottom:50px; background-color: teal;'> 
					<div class="ui center aligned small header segment">Advanced Search &nbsp;&nbsp;<i class='search icon'></i></div>
						<div class="ui raised segment moderns">
							<div class='ui form'>
								<%= form_tag advsearch_path, method: :get do |f|  %>
								<div class="ui teal field">	<h4><label>Category:
									<% if(params[:category].present?) %><div style='color:teal;' align=right>
								<%= Category.find_by_id(params[:category]).name %></div></h4></label>
									<% end %>
								<small><%= select_tag :category, options_from_collection_for_select(Category.all, :id, :name, class: '') %></small></div>
								<div class="ui field"><label>Search text:
									<% if(params[:term].present?) %><div style='color:teal;' align=right>
								<%= params[:term].to_s %></div></h4></label>
								<% end %>
								<%= text_field_tag :term, nil, placeholder: 'Location', class: '' %></div>
								<!--<div class="ui field"><label>Location</label>
								<%= text_field_tag :location, nil, placeholder: 'Title, location, some words', class: '' %></div>-->
								<div><%= submit_tag 'Search', class: "ui teal button" %></div>
								<% end %>
						</div><!-- ./form -->		
					</div><!-- ./segment -->
				</div><!-- ./segments -->
				<div class="ui teal divider"></div>
				<p><br /></p>
				<!--<h3>Comments:</h3>-->
					<div class='ui items'>
						<%#= Gig.comments.each do |c| %>
						<div class='ui item'>
							<%#= c.user_id %>
							<%3#= c.body %>
						</div><!-- ./item -->
						<%# end %>
					</div><!-- ./items -->
				</div><!-- ./fluid vertical -->
			</div><!-- ./4wide col -->
		</div><!-- ./stackable -->
	</div><!-- ./container content -->


