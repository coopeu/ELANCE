<h2 class="ui left aligned gig header">Gig <%= @gig.name %></h2>

	<!-- Content area -->
	<div class="ui container content" style='height=80%;'>
		<div class="ui stackable doubling grid">
			<!-- Middle Content -->
			<div class="twelve wide column">
				<div align="center">
					<div class="ui divider"></div>
					<div class="ui items">
						<div class="item" align="left">
							<div class="content">
								<a class="header"><%= @gig.location %></a>
								<div class="description" align="justify">
									<p><%= @gig.description %></p>
								</div>
							</div>
						</div><!-- item left -->
						<div class="ui divider"></div>
						<div class="item" align="left">
							<div class="image">
								<img src="/images/400x400.png">
							</div>
							<div class="content">
								<p class="ui mini">Submitted by <%= @gig.user.username %> <%#= @gig.user.username %>
								<!--#user_path(@gig.user) -->
								on <%= @gig.created_at.strftime("%m/%d/%Y") %></p>
								<div class="meta">
									<span><i class="calendar icon"></i><%= @gig.created_at.strftime("%m/%d/%Y") %> <i class="tag icon"></i> <%= @gig.category.name %> <i class="user icon"></i> <%= @gig.user.username %></span>
								</div>
								<div class="description" align="justify">
									<p>sectetur adipisicing elit. Perspiciatis, nihil consequatur! Vero illum illo, nesciunt, tempora accusamus praesentium sunt...</p>
									<p>Expertise: <i><b><%= @gig.skill_list %></b></i></p>
								</div>
							</div>
						</div><!-- ./item -->
					</div><!-- ./items -->

					<div class="ui divider"></div>
				</div><!-- ./center -->	
			</div><!-- ./twelve wide column left-Center Content -->

			<!-- Right Sidebar -->

			<div class="four wide column">

				<div class="ui segments teal moderns">
					<div class="ui header segment">
						Submit a proposal
					</div>
					<div class="ui segment">

						<form class="ui form">
							<%= form_for :proposal, url: gig_proposals_path(@gig) do |f| %>
						  <div class="field">
						    <%= f.label :description %>
						    <%= f.text_area :description, rows: 5, class: '', placeholder: 'Expplain the skills needed for this job' %>
						  </div>
						  	<%= f.submit 'Submit', class: 'ui teal button' %>
						<% end %>
						
					</div><!-- ./ui segment -->
					<div class="ui secondary segment">
						Other Content
					</div>
				</div>
				  <div class="ui fluid vertical menu moderns">
						<a href="" class="header teal item">Category</a>
						<a href="" class="item">Javascript</a>
						<a href="" class="item">PHP</a>
						<a href="" class="item">Angular</a>
						<a href="" class="item">Semantic-UI</a>
				  </div>


			</div><!-- ./4 cols -->
		</div>
	</div>


